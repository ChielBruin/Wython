module CompoundStatement

imports
  
  ID
  Expression
  Statement

context-free start-symbols

  CompoundStatement

context-free syntax

  CompoundStatement.If = <
    if <Exp>:
       <then:Statement+>
    <else:IfElse?>
  > {layout(
     indent "if" then &&
     align "if" else
  )}
  
  IfElse.Elif = <
    elif <Exp>:
       <then:Statement>
    <else:IfElse?>
  > {layout(
     indent "elif" then &&
     align "elif" else
  )}
  
  IfElse.Else = <
    else:
       <then:Statement>
  > {layout(
     indent "else:" then &&
     offside "else:" then
  )}
     
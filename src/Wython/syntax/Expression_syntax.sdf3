module Expression_syntax

imports
  
  ID_syntax
  Type_syntax

context-free start-symbols
  Exp

context-free syntax
  
  Exp.Int     = INT
  Exp.Float   = FLOAT
  Exp.String  = STRING
  Exp.True    = "True"
  Exp.False   = "False"
  Exp.None    = "None"
  Exp.ID      = ID
  
  Exp.FunctionCall = <<ID>(<FunctionArgs>)>
  Exp.FunctionCall = <<ID>()>
  FunctionArgs.Single   = FunctionArg
  FunctionArgs.Multiple = <<FunctionArg>,<FunctionArgs>>
  FunctionArg           = Exp